<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="editTextStyle">@style/AppTheme.LsEditText</item>
        <item name="buttonStyle">@style/AppTheme.LsButton</item>
        <item name="android:textViewStyle">@style/AppTheme.LsTextView</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.LsTextView" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/lightBlack</item>
        <item name="android:fontFamily">@font/encodesans_semibold</item>
    </style>

    <style name="AppTheme.LsEditText" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/lsedittext_background</item>
        <item name="android:textColorHint">@color/lightBlack</item>
        <item name="android:textColor">@color/lightBlack</item>
        <item name="android:drawableTint">@color/gray</item>
        <item name="android:fontFamily">@font/encodesans_semibold</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:paddingTop">@dimen/size_8</item>
        <item name="android:paddingBottom">@dimen/size_8</item>
    </style>

    <style name="AppTheme.LsCardView">
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardCornerRadius">@dimen/size_10</item>
        <item name="cardElevation">@dimen/size_3</item>
        <item name="android:minWidth">@dimen/size_infinite</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="AppTheme.LsButton" parent="@android:style/Widget.Button">
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:minWidth">@dimen/size_100</item>
        <item name="android:minHeight">@dimen/size_38</item>
        <item name="android:paddingStart">@dimen/size_30</item>
        <item name="android:paddingEnd">@dimen/size_30</item>
        <item name="android:background">@drawable/lsbutton_background</item>
        <item name="android:fontFamily">@font/encodesans_semibold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:elevation">@dimen/size_1</item>
    </style>

    <style name="GreenButton">
        <item name="android:background">@drawable/bg_green_button</item>
    </style>

    <style name="GreenButtonWithStates">
        <item name="android:background">@drawable/bg_green_gray_states_button</item>
    </style>

    <style name="RedButton" parent="AppTheme.LsButton">
        <item name="android:background">@drawable/bg_red_button</item>
    </style>

    <style name="OrangeButton">
        <item name="android:background">@drawable/bg_orange_button</item>
    </style>

    <style name="WhiteButton" parent="AppTheme.LsButton">
        <item name="android:background">@drawable/bg_white_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="LsCardTitle">
        <item name="android:textColor">@color/darkBlue</item>
        <item name="android:textSize">@dimen/text_size_17</item>
        <item name="android:fontFamily">@font/encodesans_semibold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="LsCardSecondTitle">
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:fontFamily">@font/encodesans_bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="LsCardTitleDetail">
        <item name="android:textColor">@color/lightBlack</item>
        <item name="android:textSize">@dimen/text_size_13</item>
        <item name="android:fontFamily">@font/encodesans_regular</item>
    </style>

    <style name="LsCardMainTitle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LsCardSubtitle">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LsCardSectionTitle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LsCardText">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="LsCardButton">
        <item name="android:textColor">@color/text_ls_button</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/size_10</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="FullScreenDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:padding">0dp</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="MyButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

    <style name="YellowButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/yellow</item>
    </style>

    <style name="LsTabView">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/blue_selectable</item>
        <item name="android:padding">@dimen/size_5</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_size_10</item>
        <item name="android:fontFamily">@font/encodesans_regular</item>
        <item name="android:drawableTint">@color/blue_selectable</item>
    </style>

    <style name="MoreTabView">
        <item name="android:drawablePadding">@dimen/size_10</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_17</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingTop">@dimen/size_5</item>
        <item name="android:paddingBottom">@dimen/size_5</item>
        <item name="android:paddingStart">@dimen/size_10</item>
        <item name="android:paddingEnd">@dimen/size_10</item>
        <item name="android:drawableTint">@android:color/black</item>
    </style>

    <style name="DarkBlueCheckBox">
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorAccent">@color/darkBlue</item>
    </style>

    <style name="DialogHeader">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/cyan</item>
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:fontFamily">@font/encodesans_semibold</item>
    </style>

    <style name="PasswordRequirementTitle">
        <item name="android:textColor">@color/darkRed</item>
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:fontFamily">@font/encodesans_bold</item>
    </style>

    <style name="PasswordRequirementSubtitle">
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:fontFamily">@font/encodesans_regular</item>
    </style>

</resources>
